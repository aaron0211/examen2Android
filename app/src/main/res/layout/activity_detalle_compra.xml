<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarios.comprasUsuario.DetalleCompraActivity">


    <LinearLayout
        android:id="@+id/activity_detalle_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary">

        <TextView
            android:id="@+id/activity_detalle_textView_compras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/detail"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:clickable="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_detalle_compra_img"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_detalle_layout"/>

    <TextView
        android:id="@+id/activity_detalle_compra_textView_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_textSize"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_detalle_compra_img"/>

    <TextView
        android:id="@+id/activity_detalle_compra_textView_cine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_textSize"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_detalle_compra_textView_titulo"/>

    <TextView
        android:id="@+id/activity_detalle_compra_textView_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_textSize"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_detalle_compra_textView_cine"/>

</RelativeLayout>