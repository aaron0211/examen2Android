<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peliculas.lstPeliculas.LstPeliculasFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_lst_peliculas_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"/>

    <ProgressBar
        android:id="@+id/fragment_lst_peliculas_progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/fragment_lst_peliculas_linearLayout_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_lst_peliculas_tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/fragment_lst_peliculas_button_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/retry"/>

    </LinearLayout>
</RelativeLayout>